mixin menu-p(data)
  -let json = data.catalogGroupView
    //-if json
    .container-menu
      ul.top-menu-1
        each t in json
          li.category-1
            a(href="/categoryDisplay/"+t.name).link-class= t.name
            ul.top-menu-2
              each t2 in t.catalogGroupView
                li.category-2
                  a(href="/categoryDisplay/"+t2.uniqueID+'?').link-class= t2.name
                  if t2.catalogGroupView
                    ul.top-menu-3
                      each t3 in t2.catalogGroupView
                        li.category-3
                          a(href="/categoryDisplay/"+t3.uniqueID+'?').link-class= t3.name